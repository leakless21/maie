{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "tiêu_đề": "Biên bản cuộc họp",
  "mô_tả": "Biên bản cuộc họp có cấu trúc đơn giản cho các bản ghi tiếng Việt.",
  "type": "object",
  "properties": {
    "tiêu_đề": {
      "type": "string",
      "maxLength": 200,
      "mô_tả": "Tiêu đề ngắn gọn và phù hợp của cuộc họp."
    },
    "ngày_họp": {
      "type": ["string", "null"],
      "mô_tả": "Ngày diễn ra cuộc họp (YYYY-MM-DD) hoặc null nếu không rõ."
    },
    "người_tham_gia": {
      "type": "array",
      "items": {
        "type": "string",
        "maxLength": 100
      },
      "maxItems": 100,
      "mô_tả": "Danh sách người tham gia."
    },
    "tóm_tắt": {
      "type": "string",
      "maxLength": 2000,
      "mô_tả": "Tóm tắt nội dung cuộc họp."
    },
    "chương_trình_nghị_sự": {
      "type": "array",
      "items": {
        "type": "string",
        "maxLength": 300
      },
      "minItems": 1,
      "maxItems": 20,
      "mô_tả": "Danh sách các mục trong chương trình nghị sự."
    },
    "quyết_định": {
      "type": "array",
      "items": {
        "type": "string",
        "maxLength": 300
      },
      "maxItems": 100,
      "mô_tả": "Các quyết định đã được đưa ra."
    },
    "công_việc_cần_làm": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "mô_tả": {
            "type": "string",
            "maxLength": 500
          },
          "người_được_giao": {
            "type": "string",
            "maxLength": 100
          },
          "hạn_hoàn_thành": {
            "type": ["string", "null"]
          }
        },
        "required": ["mô_tả", "người_được_giao", "hạn_hoàn_thành"],
        "additionalProperties": false
      },
      "maxItems": 200,
      "mô_tả": "Các công việc cần thực hiện."
    },
    "thẻ": {
      "type": "array",
      "items": {
        "type": "string",
        "maxLength": 50
      },
      "minItems": 1,
      "maxItems": 7,
      "mô_tả": "Các thẻ liên quan đến cuộc họp."
    }
  },
  "required": [
    "tiêu_đề",
    "ngày_họp",
    "người_tham_gia",
    "tóm_tắt",
    "chương_trình_nghị_sự",
    "quyết_định",
    "công_việc_cần_làm",
    "thẻ"
  ],
  "additionalProperties": false
}
