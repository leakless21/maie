{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Generic Summary V1",
  "description": "Generic structured summary format with categorization tags",
  "type": "object",
  "properties": {
    "summary": {
      "type": "string",
      "description": "A comprehensive summary of the content",
      "maxLength": 2000
    },
    "key_topics": {
      "type": "array",
      "description": "Key topics or themes identified in the content",
      "items": {
        "type": "string",
        "maxLength": 100
      },
      "minItems": 1,
      "maxItems": 15
    },
    "tags": {
      "type": "array",
      "description": "Category tags for content classification (FR-6)",
      "items": {
        "type": "string",
        "maxLength": 50
      },
      "minItems": 1,
      "maxItems": 5
    }
  },
  "required": ["summary", "key_topics", "tags"],
  "additionalProperties": false
}
