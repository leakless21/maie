# MAIE (Modular Audio Intelligence Engine) - Development Environment Configuration
#
# This template file contains development-specific environment variables.
# Copy this file to .env.development and customize as needed.
# Do not commit your .env.development file to version control.
#
# Environment variables use APP_ prefix with __ delimiter for nested settings.
# Example: APP_LOGGING__LOG_LEVEL maps to settings.logging.log_level

# ============================================================================
# CORE CONFIGURATION
# ============================================================================

# Environment name
APP_ENVIRONMENT=development

# Enable debug mode
APP_DEBUG=true

# Enable verbose component logging
APP_VERBOSE_COMPONENTS=true

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================

# Log level (TRACE, DEBUG, INFO, SUCCESS, WARNING, ERROR, CRITICAL)
APP_LOGGING__LOG_LEVEL=DEBUG

# Serialize logs to console (JSON format)
APP_LOGGING__LOG_CONSOLE_SERIALIZE=false

# Serialize logs to file (JSON format)
APP_LOGGING__LOG_FILE_SERIALIZE=true

# Log rotation size
APP_LOGGING__LOG_ROTATION=50 MB

# Log retention period
APP_LOGGING__LOG_RETENTION=3 days

# ============================================================================
# API CONFIGURATION
# ============================================================================

# API secret key (CHANGE IN PRODUCTION)
APP_API__SECRET_KEY=dev_api_key_change_in_production

# Maximum file upload size in MB
APP_API__MAX_FILE_SIZE_MB=100

# Default ASR backend to use when not specified in API requests
# Options: whisper, chunkformer
APP_API__DEFAULT_ASR_BACKEND=whisper

# ============================================================================
# REDIS CONFIGURATION
# ============================================================================

# Maximum queue depth for backpressure management
APP_REDIS__MAX_QUEUE_DEPTH=10

# ============================================================================
# WORKER CONFIGURATION
# ============================================================================

# Worker name identifier
APP_WORKER__WORKER_NAME=maie-worker-dev

# Job timeout in seconds (6 minutes - reasonable for ASR + diarization + LLM)
APP_WORKER__JOB_TIMEOUT=360

# Result retention time in seconds (1 hour)
APP_WORKER__RESULT_TTL=3600

# Worker concurrency (number of concurrent jobs)
APP_WORKER__WORKER_CONCURRENCY=1

# Worker prefetch multiplier
APP_WORKER__WORKER_PREFETCH_MULTIPLIER=2

# Worker prefetch timeout in seconds
APP_WORKER__WORKER_PREFETCH_TIMEOUT=10

# ============================================================================
# CLEANUP & MAINTENANCE
# ============================================================================

# Audio cleanup interval in seconds
APP_CLEANUP__AUDIO_CLEANUP_INTERVAL=60

# Log cleanup interval in seconds
APP_CLEANUP__LOG_CLEANUP_INTERVAL=3600

# Cache cleanup interval in seconds
APP_CLEANUP__CACHE_CLEANUP_INTERVAL=300

# Disk monitoring interval in seconds
APP_CLEANUP__DISK_MONITOR_INTERVAL=30

# Days to keep audio files
APP_CLEANUP__AUDIO_RETENTION_DAYS=1

# Days to keep log files
APP_CLEANUP__LOGS_RETENTION_DAYS=1

# Disk usage threshold percentage for alerts
APP_CLEANUP__DISK_THRESHOLD_PCT=90

# Enable automatic emergency cleanup on disk alerts
APP_CLEANUP__EMERGENCY_CLEANUP=false

# ============================================================================
# LLM ENHANCEMENT CONFIGURATION
# ============================================================================

# GPU memory utilization (0.1 to 1.0)
APP_LLM_ENHANCE__GPU_MEMORY_UTILIZATION=0.5

# Maximum model context length
APP_LLM_ENHANCE__MAX_MODEL_LEN=13600

# ============================================================================
# LLM SUMMARIZATION CONFIGURATION
# ============================================================================

# GPU memory utilization (0.1 to 1.0)
APP_LLM_SUM__GPU_MEMORY_UTILIZATION=0.5

# Maximum model context length
APP_LLM_SUM__MAX_MODEL_LEN=13600

# ============================================================================
# FEATURE FLAGS
# ============================================================================

# Enable enhancement feature
APP_FEATURES__ENABLE_ENHANCEMENT=false

# ============================================================================
# DIARIZATION CONFIGURATION
# ============================================================================

# Enable speaker diarization
APP_DIARIZATION__ENABLED=true

